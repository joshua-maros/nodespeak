{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "./compiler_v3"
            },
            "command": "./build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug",
            "type": "shell",
            "options": {
                "cwd": "./compiler_v3"
            },
            "command": "./debug.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "options": {
                "cwd": "./compiler_v3"
            },
            "command": "./run.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build and run",
            "dependsOn": [
                "run",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}