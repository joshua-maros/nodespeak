{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "./build"
            },
            "command": "cmake ..; make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            }
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "gdb build/bin/waveguide.x86_64",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "../build/bin/waveguide.x86_64",
            "options": {
                "cwd": "./samples/"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "run w/ readable code output",
            "type": "shell",
            "command": "../build/bin/waveguide.x86_64 | python3 ../out_parse.py",
            "options": {
                "cwd": "./samples/"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build and run",
            "dependsOn": [
                "run",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}